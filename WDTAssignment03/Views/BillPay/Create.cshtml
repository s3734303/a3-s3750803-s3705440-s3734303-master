@model BillPay
@{
    ViewData["Title"] = "Create";
}

<h1>Bill Pay</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="id" class="control-label">Account -</label>
                <input id="id" name="id" class="form-control" value=""
                       data-val="true" data-val-number="The account number must be 4 digits"
                       data-val-required="The Account field is required." />
                @Html.ValidationMessage("id", new { @class = "text-danger" })
                <br />

                <label for="payeeId" class="control-label">To Payee -</label>
                <input id="payeeId" name="payeeId" class="form-control" value=""
                       data-val-required="required." />
                @Html.ValidationMessage("payeeId", new { @class = "text-danger" })
                <br />

                <label for="Amount" class="control-label">Amount -</label>
                <input id="Amount" name="Amount" class="form-control" value=""
                       data-val="true" data-val-number="The field amount must be a number."
                       data-val-required="required." />
                @Html.ValidationMessage("Amount", new { @class = "text-danger" })
                <br />

                <label for="ScheduleDate" class="control-label">Schedule Date -</label>
                <input id="ScheduleDate" name="ScheduleDate" class="form-control" type="date"
                       data-val="true"
                       data-val-required="required." />
                @Html.ValidationMessage("scheduleDate", new { @class = "text-danger" })
                <br />

                <label for="periodType" class="control-label">Period</label>
                <select id="periodType" name="periodType">
                    <option value="@PeriodType.M">Monthly</option>
                    <option value="@PeriodType.Q">Quarter</option>
                    <option value="@PeriodType.Y">Annually</option>
                    <option value="@PeriodType.M">One-Time</option>
                </select>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="New Payment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Accounts</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}