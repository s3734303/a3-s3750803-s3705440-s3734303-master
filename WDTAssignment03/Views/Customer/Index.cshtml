@model Customer
@{
    ViewData["Title"] = "Accounts";
}

<div>
    <h1 class="display-4">Welcome, @Model.CustomerName</h1>

    <h3>Your Accounts</h3>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].AccountNumber)</th>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].AccountType)</th>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].Balance)</th>
            <th></th>
        </tr>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td>@Html.DisplayFor(x => account.AccountNumber)</td>
                <td>@Html.DisplayFor(x => account.AccountType)</td>
                <td>@Html.DisplayFor(x => account.Balance)</td>
                <td>
                    <a class="btn btn-primary"
                       asp-action="Deposit" asp-route-id="@account.AccountNumber">Deposit</a>

                    <a class="btn btn-primary"
                       asp-action="Withdraw" asp-route-id="@account.AccountNumber">Withdraw</a>

                    <a class="btn btn-primary"
                       asp-action="TransferAccount" asp-route-id="@account.AccountNumber">Transfer</a>

                    @*<input type ="hidden" name="accountNumber" value="@account.AccountNumber"/>
        <input type="submit" class="btn btn-primary" value=" View Statements"/>*@

                    <a class="btn btn-primary"
                       asp-action="IndexToViewTransaction" asp-route-id="@account.AccountNumber">My Statements</a>

                    <a class="btn btn-primary"
                       asp-action="Edit" asp-route-id="@account.CustomerID">Edit Profile</a>

                </td>
            </tr>
        }
    </table>
</div>